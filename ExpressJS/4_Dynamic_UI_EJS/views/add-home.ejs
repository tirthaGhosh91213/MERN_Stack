<%- include('partials/title')%>
  </head>
  <body class="bg-gradient-to-br from-blue-100 via-white to-purple-100 min-h-screen flex flex-col">

    <%- include('partials/nav')%>
  <main class="flex-grow flex items-start justify-center p-6 sm:p-10">
      <div class="bg-white p-8 rounded-xl shadow-xl w-full max-w-xl">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6 text-center">
          Add Your Home Here
        </h1>

        <!-- Form -->
        <form action="add-home" method="POST" enctype="multipart/form-data" class="space-y-4">
          <input 
            type="text" 
            name="houseName" 
            placeholder="Enter your home name" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400"
          >

          <input 
            type="text" 
            name="rante" 
            placeholder="Enter the price per night" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400"
          >

          <input 
            type="text" 
            name="location" 
            placeholder="Enter the location" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400"
          >

          <input 
            type="text" 
            name="rating" 
            placeholder="Enter the rating" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400"
          >

          <input 
            type="file" 
            name="picture" 
            accept="image/*"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-700 bg-white focus:outline-none focus:ring-2 focus:ring-blue-400"
          >

          <input 
            type="submit" 
            value="Add Home" 
            class="w-full bg-blue-500 text-white font-semibold px-4 py-3 rounded-lg hover:bg-blue-600 transition duration-300 cursor-pointer"
          >
        </form>
      </div>
    </main>

  </body>
</html>