<main class="max-w-7xl mx-auto px-6 py-10">
  <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
    Here are our registered homes
  </h2>

  <!-- Card Grid -->
  <ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    <% registerHome.forEach(home => { %>
      <li class="bg-white rounded-xl shadow-md hover:shadow-xl overflow-hidden transition-transform duration-300 hover:-translate-y-1">

        <!-- Image -->
        <% if (home.picture) { %>
          <img
            src="<%= home.picture %>"
            alt="<%= home.houseName %>"
            class="h-48 w-full object-cover"
          />
        <% } else { %>
          <div class="h-48 w-full flex items-center justify-center bg-gray-200 text-gray-400 text-xl">
            No Image
          </div>
        <% } %>

        <!-- Info -->
        <div class="p-4 space-y-1">
          <h3 class="text-lg font-semibold truncate"><%= home.houseName %></h3>
          <p class="text-sm text-gray-500"><%= home.location %></p>

          <!-- Rating & Price -->
          <div class="flex items-center justify-between pt-2">
            <!-- Rating (★×rating) -->
            <span class="text-yellow-500 text-sm">
              <% for (let i = 0; i < Math.floor(home.rating || 0); i++) { %>
                &#9733;
              <% } %>
            </span>

            <!-- Price -->
            <span class="text-blue-600 font-semibold">
              ₹<%= home.rante %><span class="text-sm text-gray-500"> /night</span>
            </span>
          </div>
        </div>

      </li>
    <% }) %>
  </ul>
</main>



