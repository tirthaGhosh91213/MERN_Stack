<%- include('../partials/title')%>
  </head>
  <body class="bg-gray-50 text-gray-800 flex flex-col items-center justify-center min-h-screen">
    <%- include('../partials/nav')%>
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg text-center">
    <h1 class="text-3xl font-semibold text-gray-800 mb-6"><%= editing ?"Edit":"Add"%> Your Home Here</h1>

    <!-- Form -->
    <form action="/<%= editing ?"edit-home":"Add-home"%>" method="post" class="space-y-4">
      <!-- Home Name Input -->
      <input 
        type="text" 
        required
        placeholder="Enter your home name" 
        name="houseName" 
        value="<%= editing ? home.houseName :''%>"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 text-gray-700"
      >
      <input type="hidden" name="ID" value="<%= editing ? home.ID :''%>">
      <input 
        type="text" 
        required
        placeholder="Enter your home price per day" 
        name="price" 
        value="<%= editing ? home.price :''%>"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 text-gray-700"
      >
      <input 
        type="text" 
        placeholder="Enter the rating of the home" 
        name="rating" 
        required
        value="<%= editing ? home.rating :''%>"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 text-gray-700"
      >
      <input 
        type="text" 
        required
        placeholder="location of the home" 
        name="location" 
        value="<%= editing ? home.location :''%>"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 text-gray-700"
      >
      <input 
        type="text" 
        required
        placeholder="upload photo" 
        name="photoURL" 
        value="<%= editing ?home.photoURL :''%>"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 text-gray-700"
      >
      
      <!-- Submit Button -->
      <div class="flex justify-center">
        <input 
          type="submit" 
          value="<%= editing ?`Edit home ` : `Add Home` %>"
          class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 cursor-pointer"
        >
      </div>
    </form>
  </div>

</body>
</html>
